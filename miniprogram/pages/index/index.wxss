/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  height: 100vh;
}

.chat-box {
  width: 100%;
  box-sizing: border-box;
  flex: auto;
}

.chat-input-container {
  width: 100%;
  flex: none;
  /* background-color: red; */
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 20px;
}

.chat-input-box {
  width: 80%;
  background-color: #F3F3F3;
  border-radius: 18px;
  display: flex;
  align-items: center;
  padding: 0 12px 0 18px;
}

.chat-input {
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  /* background-color: blue; */
  flex: auto;
}

.send-btn {
  width: 28px;
  height: 28px;
  margin-left: 6px;
}