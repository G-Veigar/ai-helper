.chat-msg {
    color: red;
    display: flex;
    margin-bottom: 20px;
    justify-content: flex-start;
}

.chat-msg.send {
    justify-content: flex-end;
}

.role-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin: 0 30rpx;

}

.msg-box {
    background: #2F3EE3;
    box-sizing: border-box;
    color: #eee;
    padding: 4px 10px;
    border-radius: 6px;
    height: auto;
}

.chat-msg.send .msg-box {
    background: #F3F3F3;
    color: #333;
}